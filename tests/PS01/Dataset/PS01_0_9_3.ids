<ids:ids xmlns:ids="http://standards.buildingsmart.org/IDS" xmlns:xs="http://www.w3.org/2001/XMLSchema"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://standards.buildingsmart.org/IDS file:///L:/work/ifc/IDS/0.9/ids_09.xsd">
    <ids:info>
        <ids:title>BC001 PS01</ids:title>
        <ids:copyright>aIFC4Rail</ids:copyright>
        <ids:version>1.0</ids:version>
        <ids:author>stefan@the-hard-code.com</ids:author>
