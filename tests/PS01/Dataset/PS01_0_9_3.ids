    <ids:specifications>
        
        <ids:specification name="RI-04" ifcVersion="IFC4X3" >
<!--   
            <ids:description>
                An IfcProject shall have attributes Name and Description.
                The Name must be 'BC001: Test plan 1'.
                The Description must be non-empty.  
            </ids:description>  
-->
            <ids:applicability>
                <ids:entity> 
                    <ids:name>
                        <ids:simpleValue>IFCPROJECT</ids:simpleValue>
                    </ids:name>
                </ids:entity>
            </ids:applicability>
            <ids:requirements>  
                <ids:attribute minOccurs="1" maxOccurs="unbounded">
                    <ids:name>
                        <ids:simpleValue>Name</ids:simpleValue>
                    </ids:name>
                    <ids:value>
                        <ids:simpleValue>BC001: Test plan 1</ids:simpleValue>
                    </ids:value>
                </ids:attribute>                                 
                <ids:attribute minOccurs="1" maxOccurs="unbounded">
                    <ids:name>
                        <ids:simpleValue>Description</ids:simpleValue>
                    </ids:name>
                </ids:attribute>  
            </ids:requirements> 
 
        </ids:specification>

    </ids:specifications>
</ids:ids>